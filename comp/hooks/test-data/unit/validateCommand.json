{
  "cases": [
    {
      "name": "valid basic command",
      "input": [
        {
          "run": "git status"
        }
      ],
      "expected": {
        "valid": true
      }
    },
    {
      "name": "valid command with all options",
      "input": [
        {
          "run": "npm test",
          "continueOnError": true,
          "timeout": 10000,
          "cwd": "/project"
        }
      ],
      "expected": {
        "valid": true
      }
    },
    {
      "name": "empty run string",
      "input": [
        {
          "run": ""
        }
      ],
      "expected": {
        "valid": false,
        "error": "Command run string cannot be empty"
      }
    },
    {
      "name": "missing run property",
      "input": [
        {
          "timeout": 5000
        }
      ],
      "expected": {
        "valid": false,
        "error": "Command must have 'run' property"
      }
    },
    {
      "name": "negative timeout",
      "input": [
        {
          "run": "sleep 1",
          "timeout": -1000
        }
      ],
      "expected": {
        "valid": false,
        "error": "Timeout must be positive"
      }
    },
    {
      "name": "zero timeout",
      "input": [
        {
          "run": "echo quick",
          "timeout": 0
        }
      ],
      "expected": {
        "valid": false,
        "error": "Timeout must be positive"
      }
    },
    {
      "name": "whitespace-only run string",
      "input": [
        {
          "run": "   \n\t  "
        }
      ],
      "expected": {
        "valid": false,
        "error": "Command run string cannot be empty"
      }
    },
    {
      "name": "non-string run property",
      "input": [
        {
          "run": 123
        }
      ],
      "expected": {
        "valid": false,
        "error": "Command run must be a string"
      }
    }
  ]
}